  return db.groups[group] || null;
}

// ===== WARNS =====
function addWarn(group, user) {
  if (!db.warns[group]) db.warns[group] = {};
  db.warns[group][user] = (db.warns[group][user] || 0) + 1;
  save();
  return db.warns[group][user];
}

