{
  "name": "HANS-BYTE-V1",
  "description": "JavaScript WhatsApp Bot powered by Hans Tech",
  "logo": "https://files.catbox.moe/zovr55.jpg",
  "keywords": ["whatsapp", "bot", "baileys", "hans-tech"],
  "success_url": "/",
  "stack": "container",

  "env": {
    "SESSION_ID": {
      "description": "Your WhatsApp session ID",
      "required": true,
      "value": ""
    },

    "OWNER_NUM": {
      "description": "Owner phone number (with country code)",
      "required": true,
      "value": ""
    },

    "OWNER_NAME": {
      "description": "Bot owner name",
      "required": true,
      "value": "Hans Tech"
    },

    "SUDO": {
      "description": "Sudo users numbers (comma separated)",
      "required": false,
      "value": ""
    },

    "BOT_NAME": {
      "description": "Bot display name",
      "required": true,
      "value": "HANS-BYTE"
    },

    "PREFIX": {
      "description": "Bot command prefix",
      "required": true,
      "value": "!"
    },

    "CAPTION": {
      "description": "Footer caption used in menus",
      "required": false,
      "value": "Powered by Hans Tech"
    },

    "ALIVE_IMG": {
      "description": "Alive command image URL",
      "required": false,
      "value": "https://files.catbox.moe/zovr55.jpg"
    },

    "MODE": {
      "description": "Bot mode: public / private / inbox / group",
      "required": true,
      "value": "public"
    },

    "ALWAYS_ONLINE": {
      "description": "Keep bot always online",
      "required": false,
      "value": "false"
    },

    "READ_MESSAGE": {
      "description": "Mark messages as read automatically",
      "required": false,
      "value": "false"
    },

    "AUTO_READ": {
      "description": "Auto read incoming chats",
      "required": false,
      "value": "true"
    },

    "AUTO_TYPING": {
      "description": "Show typing indicator",
      "required": false,
      "value": "true"
    },

    "AUTO_RECORDING": {
      "description": "Show recording indicator",
      "required": false,
      "value": "true"
    },

    "AUTO_VOICE": {
      "description": "Enable auto voice replies",
      "required": false,
      "value": "false"
    },

    "AUTO_STICKER": {
      "description": "Auto convert images to stickers",
      "required": false,
      "value": "false"
    },

    "CUSTOM_REACT": {
      "description": "Enable custom emoji reactions",
      "required": false,
      "value": "false"
    },

    "CUSTOM_REACT_EMOJIS": {
      "description": "Comma separated emojis for reactions",
      "required": false,
      "value": "‚ù§Ô∏è,üíñ,üíù,üî•,‚ú®"
    },

    "AUTO_REACT": {
      "description": "Auto react to messages",
      "required": false,
      "value": "false"
    },

    "OWNER_REACT": {
      "description": "React to owner messages",
      "required": false,
      "value": "false"
    },

    "REACT_EMOJI": {
      "description": "Default reaction emoji",
      "required": false,
      "value": "‚ù§Ô∏è"
    },

    "PACK_INFO": {
      "description": "Sticker pack info format: AUTHOR;PACKNAME",
      "required": false,
      "value": "Hans Tech;HANS-BYTE"
    },

    "AUTO_READ_STATUS": {
      "description": "Auto read WhatsApp status",
      "required": false,
      "value": "true"
    },

    "AUTO_STATUS_SEEN": {
      "description": "Mark status as seen",
      "required": false,
      "value": "true"
    },

    "AUTO_STATUS_REACT": {
      "description": "React to statuses automatically",
      "required": false,
      "value": "true"
    },

    "AUTO_REPLY_STATUS": {
      "description": "Reply automatically to status",
      "required": false,
      "value": "false"
    },

    "AUTO_STATUS_REPLY": {
      "description": "Enable status reply feature",
      "required": false,
      "value": "false"
    },

    "AUTO_STATUS__MSG": {
      "description": "Message sent when replying to status",
      "required": false,
      "value": "Status seen by HANS-BYTE"
    },

    "AUTO_REPLY_TEXT": {
      "description": "Text used for auto replies",
      "required": false,
      "value": ""
    },

    "AUTOLIKESTATUS": {
      "description": "Auto like WhatsApp statuses",
      "required": false,
      "value": "true"
    },

    "ANTI_DEL_PATH": {
      "description": "Anti delete message location (log/same)",
      "required": false,
      "value": "log"
    },

    "ANTILINK": {
      "description": "Enable anti-link system",
      "required": false,
      "value": "true"
    },

    "ANTILINK_ACTION": {
      "description": "Action on link detection (warn/kick/delete)",
      "required": false,
      "value": "warn"
    },

    "ANTIDELELTE": {
      "description": "Enable anti delete messages",
      "required": false,
      "value": "true"
    },

    "WELCOME": {
      "description": "Enable welcome messages in groups",
      "required": false,
      "value": "true"
    },

    "OMDB_API_KEY": {
      "description": "OMDb API key for movie commands",
      "required": false,
      "value": ""
    }
  },

  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
    }
  ]
}
